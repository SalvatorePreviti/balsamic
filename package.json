{
  "name": "balsamic-workspace",
  "version": "0.0.1",
  "private": true,
  "description": "balsamic",
  "keywords": [
    "balsamic"
  ],
  "license": "MIT",
  "author": "Salvatore Previti",
  "homepage": "https://github.com/SalvatorePreviti/balsamic#readme",
  "bugs": {
    "url": "https://github.com/SalvatorePreviti/balsamic/issues"
  },
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SalvatorePreviti/balsamic.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "mocha -r ts-node/register --recursive ./test/**/*.test.ts",
    "lint": "eslint . --fix && prettier --write --loglevel=warn .",
    "precommit": "lint-staged && pretty-quick --staged",
    "postinstall": "husky install .husky",
    "typecheck": "tsc --noEmit",
    "build": "devrun scripts/build.ts",
    "clean": "rm -fr dist",
    "publish:@balsamic/dev": "npm run lint && npm run build && cd dist/dev && npm publish"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mts,cts,cjs,mjs,json}": [
      "eslint --no-error-on-unmatched-pattern --fix",
      "prettier --write --loglevel=warn"
    ],
    "*.{yml,yaml,md,htm,html,css,scss,less}": [
      "prettier --write --loglevel=warn"
    ]
  },
  "devDependencies": {
    "@balsamic/dev": "*",
    "@balsamic/eslint-config": "*",
    "@swc/core": "^1.3.62",
    "@types/chai": "^4.3.5",
    "@types/micromatch": "^4.0.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.5",
    "@types/prettier": "^2.7.3",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "ajv": "^8.12.0",
    "benchmark": "^2.1.4",
    "chai": "^4.3.7",
    "esbuild": "^0.17.19",
    "eslint": "^8.42.0",
    "eslint-plugin-chai-expect": "^3.0.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "react": "^18.2.0",
    "terser": "^5.17.7",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
