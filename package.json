{
  "name": "balsamic-workspace",
  "version": "0.0.1",
  "private": true,
  "description": "balsamic",
  "keywords": [
    "balsamic"
  ],
  "license": "MIT",
  "author": "Salvatore Previti",
  "homepage": "https://github.com/SalvatorePreviti/balsamic#readme",
  "bugs": {
    "url": "https://github.com/SalvatorePreviti/balsamic/issues"
  },
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SalvatorePreviti/balsamic.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "mocha -r @balsamic/tsn --recursive ./test/**/*.test.ts",
    "lint": "eslint . --fix && prettier --write --log-level=warn .",
    "typecheck": "tscheck",
    "precommit": "lint-staged",
    "postinstall": "husky install .husky",
    "build": "devrun scripts/build.ts",
    "clean": "rm -fr dist",
    "publish:@balsamic/dev": "npm run lint && npm run build && cd dist/dev && npm publish"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mts,cts,cjs,mjs,json}": [
      "eslint --no-error-on-unmatched-pattern --fix",
      "prettier --write --log-level=warn"
    ],
    "*.{yml,yaml,md,htm,html,css,scss,less}": [
      "prettier --write --log-level=warn"
    ]
  },
  "dependencies": {
    "@balsamic/dev": "*",
    "@balsamic/eslint-config": "*",
    "@balsamic/tsn": "*"
  },
  "devDependencies": {
    "@swc/core": "1.3.82",
    "@types/chai": "^4.3.6",
    "@types/micromatch": "^4.0.3",
    "@types/mocha": "^10.0.2",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "ajv": "^8.12.0",
    "benchmark": "^2.1.4",
    "chai": "^4.3.10",
    "esbuild": "^0.18.20",
    "eslint": "^8.50.0",
    "eslint-plugin-chai-expect": "^3.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-mocha": "^10.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-vitest": "^0.3.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "mocha": "^10.2.0",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "terser": "^5.20.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "prettier": "@balsamic/eslint-config/.prettierrc",
  "eslintConfig": {
    "$schema": "http://json.schemastore.org/prettierrc",
    "extends": "@balsamic"
  }
}
