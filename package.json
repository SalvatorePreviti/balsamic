{
  "name": "balsamic-workspace",
  "version": "0.0.1",
  "private": true,
  "description": "balsamic",
  "keywords": [
    "balsamic"
  ],
  "license": "MIT",
  "author": "Salvatore Previti",
  "homepage": "https://github.com/SalvatorePreviti/balsamic#readme",
  "bugs": {
    "url": "https://github.com/SalvatorePreviti/balsamic/issues"
  },
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SalvatorePreviti/balsamic.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "mocha -r ts-node/register --recursive ./test/**/*.test.ts",
    "lint": "eslint . --fix && prettier --write --loglevel=warn .",
    "precommit": "lint-staged && pretty-quick --staged",
    "postinstall": "husky install .husky",
    "typecheck": "tsc --noEmit",
    "build": "node scripts/build.js",
    "clean": "rm -fr dist",
    "publish:@balsamic/dev": "npm run lint && npm run build && cd dist/dev && npm publish"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mts,cts,cjs,mjs,json}": [
      "eslint --no-error-on-unmatched-pattern --fix",
      "prettier --write --loglevel=warn"
    ],
    "*.{yml,yaml,md,htm,html,css,scss,less}": [
      "prettier --write --loglevel=warn"
    ]
  },
  "devDependencies": {
    "@swc/core": "^1.2.182",
    "@types/chai": "^4.3.1",
    "@types/micromatch": "^4.0.2",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.32",
    "@types/prettier": "^2.6.0",
    "@types/terser": "^3.12.0",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "ajv": "^8.11.0",
    "benchmark": "^2.1.4",
    "chai": "^4.3.6",
    "esbuild": "^0.14.38",
    "eslint": "^8.15.0",
    "eslint-plugin-chai-expect": "^3.0.0",
    "eslint-plugin-mocha": "^10.0.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "mocha": "^10.0.0",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "react": "^18.1.0",
    "terser": "^5.13.1",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.4",
    "undici": "^5.1.1"
  }
}
