{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "rootDir": ".",
    "outDir": ".",
    "declarationDir": ".",

    "module": "CommonJS",
    "sourceMap": true,
    "declarationMap": false,
    "declaration": true,
    "types": ["node"],
    "composite": true
  },
  "include": ["."],
  "exclude": [
    "node_modules",
    "**/node_modules/**/*",
    "**/node_modules",
    "**/dist",
    "**/test",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
