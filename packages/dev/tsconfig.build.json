{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "./dist/tsconfig.build.tsbuildinfo",

    "module": "CommonJS",
    "sourceMap": true,
    "declarationMap": false,
    "declaration": true,
    "declarationDir": "dist",
    "types": ["node"],
    "composite": true
  },
  "include": ["src"],
  "exclude": ["**/node_modules", "**/dist", "**/test", "**/*.spec.ts", "**/*.test.ts"]
}
